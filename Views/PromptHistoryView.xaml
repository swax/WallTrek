<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WallTrek.Views.PromptHistoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WallTrek.Views">

    <UserControl.Resources>
        <local:FavoriteColorConverter x:Key="FavoriteColorConverter"/>
        <local:BooleanNegationConverter x:Key="BooleanNegationConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20,20,20,10" Spacing="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BackButton" Content="← Back" Click="BackButton_Click" Margin="0,0,20,0"/>
                <TextBlock Text="Prompt History" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
            
            <TextBox x:Name="SearchTextBox" 
                     PlaceholderText="Search prompts..." 
                     Width="400" 
                     HorizontalAlignment="Left"
                     TextChanged="SearchTextBox_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <FontIcon Grid.Column="0" Glyph="&#xE721;" 
                                                          Margin="8,0,4,0" 
                                                          FontSize="16" 
                                                          Foreground="{ThemeResource TextControlPlaceholderForeground}"/>
                                                <ScrollViewer Grid.Column="1" x:Name="ContentElement" 
                                                              Margin="4,8,8,8" 
                                                              VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="20,0,20,20">
            <ListView x:Name="PromptListView" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Expander x:Name="PromptExpander" HorizontalAlignment="Stretch" Margin="0,5"
                                  IsExpanded="{Binding IsExpanded, Mode=TwoWay}">
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button Grid.Column="0" x:Name="FavoriteButton" 
                                            Width="36" Height="32" 
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            ToolTipService.ToolTip="Toggle favorite"
                                            Click="FavoriteButton_Click"
                                            Tag="{Binding}">
                                        <FontIcon Glyph="&#xE735;" FontSize="16">
                                            <FontIcon.Foreground>
                                                <SolidColorBrush Color="{Binding IsFavorite, Converter={StaticResource FavoriteColorConverter}}"/>
                                            </FontIcon.Foreground>
                                        </FontIcon>
                                    </Button>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding PromptText}" FontWeight="SemiBold" TextWrapping="Wrap" MaxLines="2"/>
                                        <TextBlock Margin="0,5,0,0" Opacity="0.7">
                                            <Run Text="Last used: "/>
                                            <Run Text="{Binding LastUsedDate}"/>
                                            <Run Text=" • Used "/>
                                            <Run Text="{Binding UsageCount}"/>
                                            <Run Text=" times"/>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="2" Text="{Binding ImageItems.Count}" 
                                               VerticalAlignment="Center" Margin="10,0,5,0" 
                                               FontWeight="SemiBold" Opacity="0.7"/>
                                    
                                    <Button Grid.Column="3" x:Name="CopyButton" 
                                            Width="36" Height="32" 
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            ToolTipService.ToolTip="Copy prompt to main view"
                                            Click="CopyButton_Click"
                                            Tag="{Binding}">
                                        <FontIcon Glyph="&#xE8C8;" FontSize="14"/>
                                    </Button>
                                    
                                    <Button Grid.Column="4" x:Name="DeleteButton" 
                                            Width="36" Height="32" 
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            ToolTipService.ToolTip="Delete prompt from history"
                                            Click="DeleteButton_Click"
                                            Tag="{Binding}">
                                        <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="OrangeRed"/>
                                    </Button>
                                </Grid>
                            </Expander.Header>
                            
                            <ScrollViewer HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" 
                                          VerticalScrollMode="Disabled" VerticalScrollBarVisibility="Disabled">
                                <ItemsRepeater ItemsSource="{Binding ImageItems}">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Orientation="Horizontal" Spacing="10"/>
                                    </ItemsRepeater.Layout>
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="8" BorderBrush="Gray" BorderThickness="1" 
                                                    Background="Transparent">
                                                <Grid>
                                                    <Button Background="Transparent" BorderThickness="0" 
                                                            Padding="0" Click="ImageButton_Click" RightTapped="ImageButton_RightTapped" Tag="{Binding}"
                                                            Loaded="ImageButton_Loaded">
                                                        <ToolTipService.ToolTip>
                                                            <StackPanel>
                                                                <TextBlock FontWeight="SemiBold">Generation Models:</TextBlock>
                                                                <TextBlock>
                                                                    <Run Text="LLM: "/>
                                                                    <Run Text="{Binding LlmModel}" FontWeight="SemiBold"/>
                                                                </TextBlock>
                                                                <TextBlock>
                                                                    <Run Text="Image: "/>
                                                                    <Run Text="{Binding ImgModel}" FontWeight="SemiBold"/>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </ToolTipService.ToolTip>
                                                        <Button.ContextFlyout>
                                                            <MenuFlyout Opening="ImageContextMenu_Opening">
                                                                <MenuFlyoutItem Text="Set as Background" 
                                                                              Click="SetAsBackground_Click"
                                                                              Tag="{Binding}">
                                                                    <MenuFlyoutItem.Icon>
                                                                        <FontIcon Glyph="&#xE91B;"/>
                                                                    </MenuFlyoutItem.Icon>
                                                                </MenuFlyoutItem>
                                                                <MenuFlyoutSeparator/>
                                                                <MenuFlyoutItem x:Name="UploadToDeviantArtItem" 
                                                                              Text="Upload to DeviantArt" 
                                                                              Click="UploadToDeviantArt_Click"
                                                                              Tag="{Binding}"
                                                                              IsEnabled="{Binding IsUploading, Converter={StaticResource BooleanNegationConverter}}"
                                                                              Visibility="{Binding IsUploadedToDeviantArt, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                                <MenuFlyoutItem x:Name="ViewOnDeviantArtItem" 
                                                                              Text="View on DeviantArt" 
                                                                              Click="ViewOnDeviantArt_Click"
                                                                              Tag="{Binding}"
                                                                              Visibility="{Binding IsUploadedToDeviantArt, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                <MenuFlyoutSeparator Visibility="{Binding IsUploadedToDeviantArt, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                <MenuFlyoutItem Text="Open Image" 
                                                                              Click="OpenImage_Click"
                                                                              Tag="{Binding}">
                                                                    <MenuFlyoutItem.Icon>
                                                                        <FontIcon Glyph="&#xE8A7;"/>
                                                                    </MenuFlyoutItem.Icon>
                                                                </MenuFlyoutItem>
                                                                <MenuFlyoutItem Text="Open in file explorer" 
                                                                              Click="OpenInExplorer_Click"
                                                                              Tag="{Binding}"/>
                                                            </MenuFlyout>
                                                        </Button.ContextFlyout>
                                                        <Image Width="150" Height="100" Stretch="UniformToFill">
                                                            <Image.Source>
                                                                <BitmapImage UriSource="{Binding ImagePath}"/>
                                                            </Image.Source>
                                                        </Image>
                                                    </Button>
                                                    <!-- Upload indicator -->
                                                    <Border Background="LimeGreen" 
                                                            CornerRadius="12" 
                                                            Width="24" Height="24" 
                                                            HorizontalAlignment="Right" 
                                                            VerticalAlignment="Top" 
                                                            Margin="0,5,5,0"
                                                            Visibility="{Binding IsUploadedToDeviantArt, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <FontIcon Glyph="&#xE72E;" 
                                                                FontSize="12" 
                                                                Foreground="White" 
                                                                HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                                    </Border>
                                                    <!-- Upload loading indicator -->
                                                    <Border Background="Orange" 
                                                            CornerRadius="12" 
                                                            Width="24" Height="24" 
                                                            HorizontalAlignment="Right" 
                                                            VerticalAlignment="Top" 
                                                            Margin="0,5,5,0"
                                                            Visibility="{Binding IsUploading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <FontIcon Glyph="&#xE916;" 
                                                                FontSize="12" 
                                                                Foreground="White" 
                                                                HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </ScrollViewer>
                        </Expander>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        
        <!-- Full screen image popup -->
        <Border x:Name="FullScreenOverlay" Grid.RowSpan="2" Background="Black" Opacity="0.9" 
                Visibility="Collapsed" Tapped="FullScreenOverlay_Tapped">
            <Image x:Name="FullScreenImage" Stretch="Uniform" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Tapped="FullScreenImage_Tapped"/>
        </Border>
    </Grid>
</UserControl>