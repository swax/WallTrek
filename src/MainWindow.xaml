<!-- MainWindow.xaml -->
<Window
    x:Class="WallTrek.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WallTrek"
    xmlns:views="using:WallTrek.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- Content Area -->
        <views:MainView x:Name="MainViewControl" 
                       Visibility="Visible"/>
        <views:SettingsView x:Name="SettingsViewControl" 
                           Visibility="Collapsed"/>
        <views:PromptHistoryView x:Name="HistoryViewControl" 
                                Visibility="Collapsed"/>
        <views:RandomPromptSettingsView x:Name="RandomPromptSettingsViewControl" 
                                       Visibility="Collapsed"/>
    </Grid>
</Window>